@model ForumApplication.WEB.Models.BaseForumContainerViewModel

@{
    ViewBag.Title = "Index";
    if (User.Identity.IsAuthenticated)
    {
        Layout = "~/Views/Shared/_LoginNavLayout.cshtml";
    }
    else
    {
        Layout = "~/Views/Shared/_Layout.cshtml";
    }

}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>SectionList</title>
    <script src="~/Scripts/jquery-3.0.0.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>

    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />

</head>
<body>
    <div>
        <table class="table table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>Title</th>
                    <th>UserName</th>
                    <th>Sections</th>
                <tr>
                <tr>
                    <td>@Model.Title</td>
                    <td>@Model.UserName</td>
                    <td>
                        <ol>
                            @foreach (var item in Model.NestedItemListInfo)
                            {
                                <li>
                                    @Html.ActionLink($"{item.Title}", "Item", "Section", new { item.Id }, null)
                                </li>
                            }
                        </ol>
                    </td>
                </tr>
            </thead>
        </table>
    </div>
</body>
</html>
