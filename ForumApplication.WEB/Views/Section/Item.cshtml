@using ForumApplication.Infrastructure.Consts
@using Microsoft.AspNet.Identity
@model ForumApplication.WEB.Models.BaseViewModelItems.BaseForumContainerViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";


}

<div class="container-fluid mt-5 ">
    <div class="border-warning border p-2 border rounded container-for-card">
        <div class="card bg-light text-dark mt-2 mb-2 ml-2 mr-2">
            <div class="card-header forum-card-header">
                <h6 class="float-right">
                    @Html.ActionLink(
                     "Back to SectionList"
                     , "Item"
                     , "SectionList"
                     , new {Id = Model.ParrentId}
                     , null)
                </h6>
                <h5>
                    @Html.ActionLink($"{Model.Title}", "item", new { Id = Model.Id }, new { @class = "url-cursor" })
                </h5>
                <p class="small"> Creator: @Html.ActionLink($"{Model.UserName}", "ShowProfile", "Account", new { Id = Model.UserId }, null) </p>
            </div>
            <div class="card-body">

                @foreach (var nestedItem in Model.NestedItemListInfo)
                {
                    <div class="card-body  border-dark border-bottom">
                        <div class="row">
                            <div class="col-sm-6">
                                @Html.ActionLink($"{nestedItem.Title}", "Item", "Topic", new { Id = nestedItem.Id }, new { @class = "nav" })
                            </div>
                            <div class="col-sm-6">
                                <div class="row">
                                    <div class="col-sm-6">
                                        <p>Posts: @nestedItem.CountOfNestedElements</p>
                                    </div>
                                    <div class="col-sm-6">
                                        @if (nestedItem.LastUpdateTopic != null)
                                        {
                                            <div class="row">
                                                <span>
                                                    <span class="text-info">Last Active User:</span>
                                                    @Html.ActionLink(
                                                                                             $"{@nestedItem.LastUpdateTopic.UserName}"
                                                                                             , "ShowProfile"
                                                                                             , "Account"
                                                                                             , new { Id = nestedItem.LastUpdateTopic.UserId }
                                                                                             , null
                                                                                             )
                                                    <br />
                                                    <span class="text-info">Date:</span>
                                                    <span>@nestedItem.LastUpdateTopic.UpdateTime</span>
                                                </span>
                                            </div>
                                        }
                                        else
                                        {
                                            <p class="text-danger">No Created Posts</p>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>

        <div class="card ml-2 mr-2">
            <div class="card-header ">

                @if (User.IsInRole(RoleConsts.Administrator) || User.IsInRole(RoleConsts.Moderator))
                {
                    <buton class="btn-outline-dark btn" id="new-forum-btn">Create New Topic</buton>
                    <buton class="btn-outline-dark btn" id="update-forum-btn">Update Section</buton>
                }
                else if (User.Identity.IsAuthenticated)
                {
                    <buton class="btn-outline-dark btn" id="new-forum-btn">Create New Tpopic</buton>
                }
                else
                {
                    <span class="small text-info">
                        (You have insufficient privileges to post here.)
                    </span>
                }
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="create-forum-modal">
    <div class="modal-dialog">
        <div class="modal-content">

            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title">Create Topic</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            @using (Html.BeginForm("Create", "Topic", FormMethod.Post))
            {
                <div class="modal-body">
                    <div class="form-group">
                        <label for="LabelTitle">Section Title: </label>
                        <input type="text" id="LabelTitle" class="form-control" placeholder="Enter Title of Topic" name="Title" data-val="true" data-val-required="Titile is Required" />
                        <span class="field-validation-valid" data-valmsg-for="LabelTitle" data-valmsg-replace="true"></span>
                    </div>
                    <input type="hidden" value="@User.Identity.GetUserId()" name="UserAccountId" />
                    <input type="hidden" value="@Model.Id" name="SectionId" />
                    <input type="submit" class="btn btn-outline-primary" value="Create new Topic" />

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-success" data-dismiss="modal">Close</button>
                </div>
            }
        </div>
    </div>
</div>



<div class="modal fade" id="update-forum">
    <div class="modal-dialog">
        <div class="modal-content">

            <div class="modal-header">
                <h4 class="modal-title">Update Title</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            @using (Html.BeginForm("Update", "Section", FormMethod.Post))
            {
                <div class="modal-body">
                    <div class="form-group">
                        <textarea class="form-control" id="exampleTextarea" rows="3" name="Title" data-val="true" data-val-required="Titile is Required">@Model.Title</textarea>
                    </div>
                    <input type="hidden" value="@Model.Id" name="SectionId" />
                    <input type="submit" class="btn btn-outline-primary" value="Update Section Title" />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-success" data-dismiss="modal">Close</button>
                </div>
            }
        </div>
    </div>
</div>


<script>
    $("#new-forum-btn").click(function () {
        $("#create-forum-modal").modal();
    });

    $("#update-forum-btn").click(function () {
        $("#update-forum").modal();
    });
</script>