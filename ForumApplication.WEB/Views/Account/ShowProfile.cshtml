@model ForumApplication.WEB.Models.UserAccountsInfoViewModel
@using Microsoft.AspNet.Identity

@{
    ViewBag.Title = "ShowProfile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container border border-warning rounded" id="profile-container">

    <div class="row border-bottom mt-4 border-primary">
        <div class="col-sm-6 align-middle">
            <div class="mt-3"><h5 class="text-warning">@Model.UserName</h5></div>
            <div class="row mt-4 ml-1"><p>Status: @Model.RoleName</p></div>
        </div>
        <div class="col-sm-6">
            <div class="row"><img class="border ml-3 mb-2" src="@Model.Image" /></div>
        </div>
    </div>
    <div class="row border-bottom mt-4 border-primary form-group">
        <div class="col-sm-6">
            <p>BirthDay</p>
        </div>
        <div class="col-sm-6">
            @Html.DisplayFor(x => x.BirthDay)
        </div>

    </div>
    <div class="row border-bottom mt-4 border-primary">
        <div class="col-sm-6">
            <p>Gender</p>
        </div>
        <div class="col-sm-6">
            @Html.DisplayFor(x => x.Gender)
        </div>
    </div>
    <div class="row border-bottom mt-4 border-primary">
        <div class="col-sm-6">
            <p>Location</p>
        </div>
        <div class="col-sm-6">
            @Html.DisplayFor(x => x.Location)
        </div>
    </div>
    <div class="row border-bottom mt-4 border-primary">
        <div class="col-sm-6">
            <p>SomeInformation</p>
        </div>
        <div class="col-sm-6">
            @Html.DisplayFor(x => x.SomeInformation)
        </div>
    </div>
    @if (Model.Id.Equals(User.Identity.GetUserId()))
    {
        <div class="row justify-content-center mt-5">
            <button id="update-profile-btn" type="submit" class="btn btn-outline-warning " onclick="location.href='@Url.Action("UpdateProfile", "Account")'"><h5>Update</h5></button>
        </div>
    }



</div>
