@using Microsoft.AspNet.Identity
@model ForumApplication.WEB.Models.AccountViewModel.UserAccountsInfoViewModel

@{
    ViewBag.Title = "Profiles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script>
    $(function () {
        $("#BirthDay").datepicker()
    });
</script>
<div class="container border border-warning rounded" id="profile-container">
    <h4 class="text-center">Describe or update some information about you</h4>
    @using (Html.BeginForm())
    {
        <div class="row border-bottom mt-4 border-primary">
            <div class="col-sm-6 align-middle">
                <div class="mt-3"><h5 class="text-warning">@Model.UserName</h5></div>
                <div class="row mt-4 ml-1"><p>Status: @Model.RoleName</p></div>
            </div>
            <div class="col-sm-6">
                <div class="row"><img class="border ml-3 mb-2" src="~/Content/Pictures/UserPictures/@Model.Image" /></div>
            </div>
        </div>
        <div class="row border-bottom mt-4 border-primary form-group">
            <div class="col-sm-6">
                <p>BirthDay</p>
            </div>
            <div class="col-sm-6">
                @Html.EditorFor(x => x.BirthDay)
            </div>

        </div>
        <div class="row border-bottom mt-4 border-primary">
            <div class="col-sm-6">
                <p>Gender</p>
            </div>
            <div class="col-sm-6">
                @Html.EnumDropDownListFor(
                     x => x.Gender,
                     new { @class = "form-control" })
            </div>
        </div>
        <div class="row border-bottom mt-4 border-primary">
            <div class="col-sm-6">
                <p>Location</p>
            </div>
            <div class="col-sm-6">
                @Html.EditorFor(x => x.Location)
            </div>
        </div>
        <div class="row border-bottom mt-4 border-primary">
            <div class="col-sm-6">
                <p>SomeInformation</p>
            </div>
            <div class="col-sm-6">
                @Html.TextAreaFor(x => x.SomeInformation)
            </div>
        </div>
        <input type="hidden" name="AccountId" value="@Model.Id" />
        <div class="row justify-content-center mt-5">
            <button id="update-profile-btn" type="submit" class="btn btn-outline-warning"><h5>Update</h5></button>
        </div>

    }
</div>
